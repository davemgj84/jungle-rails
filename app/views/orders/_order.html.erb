<tr>
  <td>
    <%= image_tag Product.find_by(id: order.product_id).image.tiny %>
  </td>
  <td>
    <h4><%=  Product.find_by(id: order.product_id).name %></h4>
    <br>
    <p><%=  Product.find_by(id: order.product_id).description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol  Product.find_by(id: order.product_id).price %>
  </td>
  <td>
    <%= order.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol  Product.find_by(id: order.product_id).price * order.quantity %>
  </td>
</tr>